<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Baird.ViewModels"
             xmlns:asyncImage="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Baird.Controls.RequestsControl"
             x:CompileBindings="True"
             x:DataType="vm:RequestsViewModel">

    <Grid RowDefinitions="Auto,*" Background="Transparent">
        
        <!-- Row 0: Header -->
        <Border Grid.Row="0" Padding="20" KeyboardNavigation.IsTabStop="False">
            <StackPanel Spacing="10">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" 
                               Text="Requests" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="White"
                               IsTabStop="False"/>
                    
                    <Button Grid.Column="1" 
                            Content="↻ Refresh"
                            Command="{Binding RefreshCommand}"
                            Background="#333333"
                            BorderBrush="#555555"
                            Padding="15,8"
                            CornerRadius="4"/>
                </Grid>
                
                <!-- Status Message -->
                <TextBlock Text="{Binding StatusMessage}" 
                           FontSize="14" 
                           Foreground="#AAAAAA"
                           TextWrapping="Wrap"
                           IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
            </StackPanel>
        </Border>

        <!-- Row 1: Requests Grid -->
        <ScrollViewer Grid.Row="1"
                      Focusable="False"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto"
                      KeyboardNavigation.TabNavigation="Contained">
            <ItemsControl Name="RequestsList" 
                          ItemsSource="{Binding Requests}"
                          Background="Transparent"
                          XYFocus.NavigationModes="Enabled">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Background="Transparent"
                                BorderBrush="#333333"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="0"
                                Margin="12"
                                Command="{Binding $parent[UserControl].DataContext.PlayCompletedCommand}"
                                CommandParameter="{Binding}"
                                IsEnabled="{Binding IsAvailable}"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch">
                            <Button.Styles>
                                <Style Selector="Button:disabled">
                                    <Setter Property="Opacity" Value="0.7"/>
                                </Style>
                                <Style Selector="Button[IsEnabled=True]:pointerover">
                                    <Setter Property="BorderBrush" Value="#00AA00"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Style>
                            </Button.Styles>
                            
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                                <!-- Poster Image -->
                                <Border Grid.Row="0" 
                                        CornerRadius="8,8,0,0" 
                                        ClipToBounds="True"
                                        Background="#1a1a1a"
                                        Height="350">
                                    <Panel>
                                        <Image asyncImage:ImageLoader.Source="{Binding FullPosterUrl}" 
                                               Stretch="UniformToFill"/>
                                        
                                        <!-- Play Icon Overlay for Available Items -->
                                        <Border Background="#AA000000" 
                                                CornerRadius="50"
                                                Width="80"
                                                Height="80"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                IsVisible="{Binding IsAvailable}">
                                            <TextBlock Text="▶" 
                                                       FontSize="40" 
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Margin="5,0,0,0"/>
                                        </Border>
                                    </Panel>
                                </Border>
                                
                                <!-- Title and Info -->
                                <Border Grid.Row="1" Background="#222222" Padding="12">
                                    <StackPanel Spacing="8">
                                        <!-- Title -->
                                        <TextBlock Text="{Binding Title}" 
                                                   FontSize="16" 
                                                   FontWeight="SemiBold"
                                                   Foreground="White"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxLines="2"
                                                   TextWrapping="Wrap"/>
                                        
                                        <!-- Badges Row -->
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                        <Border Background="#0088DD" 
                                                CornerRadius="3" 
                                                Padding="8,3">
                                            <TextBlock Text="{Binding BadgeText}" 
                                                       FontSize="11" 
                                                       Foreground="White"
                                                       FontWeight="Bold"/>
                                        </Border>
                                        
                                        <Border Background="{Binding StatusColor}" 
                                                CornerRadius="3" 
                                                Padding="8,3">
                                            <TextBlock Text="{Binding StatusText}" 
                                                       FontSize="11" 
                                                       Foreground="White"
                                                       FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>
                                    
                                    <!-- Date -->
                                    <TextBlock Text="{Binding FormattedDate}" 
                                               FontSize="12" 
                                               Foreground="#888888"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Progress Bar -->
                                <ProgressBar Grid.Row="2" 
                                             Height="8" 
                                             Minimum="0"
                                             Maximum="100"
                                             Value="{Binding Progress}"
                                             Foreground="{Binding StatusColor}"
                                             Background="#111111"
                                             BorderThickness="0"
                                             CornerRadius="0,0,8,8"/>
                            </Grid>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Loading State -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    IsVisible="{Binding IsLoading}">
            <TextBlock Text="Loading requests..." 
                       FontSize="20" 
                       Foreground="#AAAAAA" 
                       HorizontalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" 
                         Width="200" 
                         Margin="0,10,0,0" 
                         Height="4"/>
        </StackPanel>
        
        <!-- Empty State -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    IsVisible="{Binding !IsLoading}"
                    Opacity="0.6">
            <TextBlock Text="No active or recent requests" 
                       FontSize="18" 
                       Foreground="#666666" 
                       HorizontalAlignment="Center"
                       IsVisible="{Binding !Requests.Count}"/>
        </StackPanel>
    </Grid>
</UserControl>
