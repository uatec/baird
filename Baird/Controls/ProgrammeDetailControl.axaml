<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Baird.ViewModels"
             xmlns:controls="using:Baird.Controls"
             xmlns:conv="using:Baird.Converters"
             xmlns:services="using:Baird.Services"
             xmlns:asyncImage="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:CompileBindings="True"
             x:Class="Baird.Controls.ProgrammeDetailControl"
             x:DataType="vm:ProgrammeDetailViewModel"
             >

    <UserControl.Resources>
        <conv:StringVisibilityConverter x:Key="StringVisibilityConverter"/>
    </UserControl.Resources>

    <UserControl.KeyBindings>
        <KeyBinding Gesture="Escape" Command="{Binding BackCommand}" />
        <KeyBinding Gesture="Back" Command="{Binding BackCommand}" />
        <KeyBinding Gesture="Enter" Command="{Binding PlayCommand}" CommandParameter="{Binding SelectedEpisode}" />
    </UserControl.KeyBindings>
    
    <Grid Background="#E0000000"> <!-- Dark semi-transparent background -->
        
        <!-- Background Image (Dimmed) -->
        <Border Background="Blue" VerticalAlignment="Top" Height="600">
             <Image asyncImage:ImageLoader.Source="{Binding SelectedProgramme.ImageUrl}" 
                    Stretch="UniformToFill" 
                    Opacity="0.3"/>
        </Border>
        
        <Grid RowDefinitions="Auto, *, Auto" Margin="50" 
              XYFocus.NavigationModes="Enabled"
              XYFocus.UpNavigationStrategy="Projection"
              XYFocus.DownNavigationStrategy="Projection"
              XYFocus.LeftNavigationStrategy="Projection"
              XYFocus.RightNavigationStrategy="Projection">
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Spacing="10">
                <Button Name="BackButton" Content="â† Back" Background="Transparent" Foreground="White" FontSize="20" HorizontalAlignment="Left" Focusable="True" Command="{Binding BackCommand}" />
                <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                     <TextBlock Text="{Binding SelectedProgramme.Name}" FontSize="48" FontWeight="Bold" Foreground="White"/>
                     <Border Background="#333333" CornerRadius="6" Padding="8,2" VerticalAlignment="Center" Margin="0,4,0,0" IsVisible="{Binding SelectedProgramme.Source, Converter={StaticResource StringVisibilityConverter}}">
                        <TextBlock Text="{Binding SelectedProgramme.Source}" FontSize="16" FontWeight="SemiBold" Foreground="#4CC9F0"/>
                     </Border>
                </StackPanel>
                <TextBlock Text="{Binding SelectedProgramme.Synopsis}" FontSize="24" Foreground="#CCCCCC" TextWrapping="Wrap" MaxWidth="800" HorizontalAlignment="Left"/>
            </StackPanel>

            <!-- Episodes List -->
            <ListBox Grid.Row="1" 
                     Name="EpisodeList" 
                     Margin="0, 30, 0, 0"
                     Focusable="True"
                     ItemsSource="{Binding ProgrammeChildren}"
                     SelectedItem="{Binding SelectedEpisode, Mode=TwoWay}"
                     Background="Transparent"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.Styles>
                        <!-- Tile Style for ListBoxItem -->
                        <Style Selector="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="4"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="CornerRadius" Value="8"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                        </Style>
                        
                        <!-- Selected or Focused -> Highlight Border -->
                        <Style Selector="ListBoxItem:selected">
                            <Setter Property="BorderBrush" Value="#eeeeee"/>
                        </Style>
                        <Style Selector="ListBoxItem:focus">
                            <Setter Property="BorderBrush" Value="#eeeeee"/>
                        </Style>
                        
                        <!-- Remove default blue background for selection -->
                        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                            <Setter Property="Background" Value="Transparent"/>
                        </Style>
                        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="Transparent"/>
                        </Style>
                    </ListBox.Styles>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Name="EpisodesWrapPanel" ItemWidth="300" ItemHeight="240" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Button Background="Transparent" 
                                    BorderThickness="0" 
                                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                                    Command="{Binding $parent[UserControl].DataContext.PlayCommand}"
                                    CommandParameter="{Binding}">
                                <controls:MediaTileControl DataContext="{Binding}" />
                            </Button>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
        </Grid>
    </Grid>
</UserControl>
