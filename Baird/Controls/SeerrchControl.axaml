<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Baird.ViewModels"
             xmlns:controls="using:Baird.Controls"
             xmlns:conv="using:Baird.Converters"
             xmlns:asyncImage="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Baird.Controls.SeerrchControl"
             x:CompileBindings="True"
             x:DataType="vm:SeerrchViewModel">

    <UserControl.KeyBindings>
        <KeyBinding Gesture="Escape" Command="{Binding BackCommand}" />
        <KeyBinding Gesture="Back" Command="{Binding BackCommand}" />
    </UserControl.KeyBindings>

    <UserControl.Styles>
        <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Setter Property="BorderThickness" Value="4"/>
        </Style>
    </UserControl.Styles>

    <Grid Name="SeerrchGrid" RowDefinitions="Auto,*,Auto" Background="Transparent">
        
        <!-- Row 0: Search Box and Status -->
        <Border Grid.Row="0" Padding="20" KeyboardNavigation.IsTabStop="False">
            <StackPanel Spacing="10">
                <TextBlock Text="Seerrch" FontSize="32" FontWeight="Bold" Foreground="White" Margin="0,0,0,10" IsTabStop="False"/>
                
                <TextBox Name="SearchBox" 
                         Text="{Binding SearchText}" 
                         FontSize="24" 
                         Watermark="Search for movies and TV shows...">
                    <TextBox.KeyBindings>
                        <KeyBinding Gesture="Down" Command="{Binding $parent[controls:SeerrchControl].MoveFocusDownCommand}" />
                    </TextBox.KeyBindings>
                </TextBox>
                
                <!-- Status Message -->
                <Border IsVisible="{Binding ShowStatus}" 
                        Background="#222222" 
                        CornerRadius="4" 
                        Padding="15,10">
                    <TextBlock Text="{Binding StatusMessage}" 
                               FontSize="16" 
                               Foreground="White"
                               TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Row 1: Search Results -->
        <ScrollViewer Grid.Row="1"
                      Focusable="False"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto"
                      KeyboardNavigation.TabNavigation="Contained">
            <ItemsControl Name="ResultsList" 
                          ItemsSource="{Binding SearchResults}"
                          Background="Transparent"
                          XYFocus.NavigationModes="Enabled">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="6" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Background="Transparent"
                                BorderBrush="#333333"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="0"
                                Margin="8"
                                Command="{Binding $parent[UserControl].DataContext.RequestItemCommand}"
                                CommandParameter="{Binding}"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch">
                            <Grid RowDefinitions="*,Auto">
                                <!-- Poster Image -->
                                <Border Grid.Row="0" 
                                        CornerRadius="8,8,0,0" 
                                        ClipToBounds="True"
                                        Background="#1a1a1a">
                                    <Image asyncImage:ImageLoader.Source="{Binding FullPosterUrl}" 
                                           Stretch="UniformToFill"
                                           Width="200"
                                           Height="300"/>
                                </Border>
                                
                                <!-- Info Panel -->
                                <Border Grid.Row="1" Background="#222222" Padding="8">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                    
                                    <!-- Title -->
                                    <TextBlock Grid.Row="0" 
                                               Text="{Binding Title}" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"
                                               Foreground="White"
                                               TextTrimming="CharacterEllipsis"
                                               MaxLines="2"
                                               TextWrapping="Wrap"/>
                                    
                                    <!-- Badges -->
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="5" Margin="0,5,0,0">
                                        <Border Background="#0088DD" 
                                                CornerRadius="3" 
                                                Padding="6,2">
                                            <TextBlock Text="{Binding BadgeText}" 
                                                       FontSize="10" 
                                                       Foreground="White"
                                                       FontWeight="Bold"/>
                                        </Border>
                                        
                                        <Border Background="#00AA00" 
                                                CornerRadius="3" 
                                                Padding="6,2"
                                                IsVisible="{Binding IsAvailable}">
                                            <TextBlock Text="Available" 
                                                       FontSize="10" 
                                                       Foreground="White"
                                                       FontWeight="Bold"/>
                                        </Border>
                                        
                                        <Border Background="#CCAA00" 
                                                CornerRadius="3" 
                                                Padding="6,2"
                                                IsVisible="{Binding StatusText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                            <TextBlock Text="{Binding StatusText}" 
                                                       FontSize="10" 
                                                       Foreground="White"
                                                       FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Loading Spinner -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    IsVisible="{Binding ShowSpinner}">
            <TextBlock Text="Searching..." 
                       FontSize="20" 
                       Foreground="#AAAAAA" 
                       HorizontalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" 
                         Width="200" 
                         Margin="0,10,0,0" 
                         Height="4"/>
        </StackPanel>

        <!-- Row 2: Empty placeholder if needed -->
        <Border Grid.Row="2"/>
    </Grid>
</UserControl>
