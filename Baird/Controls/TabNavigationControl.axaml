<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Baird.ViewModels"
             xmlns:controls="using:Baird.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Baird.Controls.TabNavigationControl"
             x:CompileBindings="True"
             x:DataType="vm:TabNavigationViewModel">

    <UserControl.KeyBindings>
        <KeyBinding Gesture="Escape" Command="{Binding BackCommand}" />
    </UserControl.KeyBindings>

    <UserControl.Styles>
        <Style Selector="Button.TabButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0,0,0,4"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        
        <Style Selector="Button.TabButton:focus">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="Background" Value="#333333"/>
        </Style>

        <Style Selector="Button.TabButton.selected">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
        </Style>
        
        <Style Selector="Button.TabButton.selected:focus">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#66BB6A"/>
            <Setter Property="Background" Value="#444444"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto,*" Background="#88000000"
          XYFocus.NavigationModes="Enabled"
          XYFocus.DownNavigationStrategy="Projection"
          XYFocus.UpNavigationStrategy="Projection">
        
        <!-- Tab Bar -->
        <Border Grid.Row="0" Background="#CC222222" BorderBrush="#55333333" BorderThickness="0,0,0,2" ClipToBounds="True" Height="60">
            <!-- Enabled XYFocus for directional navigation (useful for remote/keyboard) -->
             <Canvas Name="CarouselContainer" Background="Transparent" PointerEntered="OnTabBarPointerEntered">
                <ItemsControl Name="TabBar" 
                              ItemsSource="{Binding Tabs}" 
                              KeyboardNavigation.TabNavigation="Once"
                              XYFocus.NavigationModes="Enabled">
                    <ItemsControl.Transitions>
                        <Transitions>
                            <DoubleTransition Property="Canvas.Left" Duration="0:0:0.3" Easing="CubicEaseOut"/>
                        </Transitions>
                    </ItemsControl.Transitions>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="0"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="vm:TabItem">
                            <Button Classes="TabButton"
                                    Name="{Binding Title}"
                                    Content="{Binding Title}"
                                    GotFocus="OnTabButtonGotFocus"
                                    Command="{Binding $parent[UserControl].((vm:TabNavigationViewModel)DataContext).SelectTabCommand}"
                                    CommandParameter="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Canvas>
        </Border>

        <!-- Tab Content -->
        <ContentControl Grid.Row="1"
                        Name="TabContent"
                        Content="{Binding SelectedTab.Content}" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch"
                        IsTabStop="False"
                        Focusable="False"
                        GotFocus="OnContentGotFocus">
            <ContentControl.DataTemplates>
                <DataTemplate DataType="{x:Type vm:HistoryViewModel}">
                    <controls:HistoryControl/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:OmniSearchViewModel}">
                    <controls:OmniSearchControl/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:WatchlistViewModel}">
                    <controls:WatchlistControl/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:CecDebugViewModel}">
                    <controls:CecDebugControl/>
                </DataTemplate>
            </ContentControl.DataTemplates>
        </ContentControl>

    </Grid>
</UserControl>
