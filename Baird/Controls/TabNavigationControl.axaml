<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Baird.ViewModels"
             xmlns:controls="using:Baird.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Baird.Controls.TabNavigationControl"
             x:CompileBindings="True"
             x:DataType="vm:TabNavigationViewModel">

    <UserControl.KeyBindings>
        <KeyBinding Gesture="Escape" Command="{Binding BackCommand}" />
        <KeyBinding Gesture="PageUp" Command="{Binding PreviousTabCommand}" />
        <KeyBinding Gesture="PageDown" Command="{Binding NextTabCommand}" />
    </UserControl.KeyBindings>

    <UserControl.Styles>
        <Style Selector="Button.TabButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0,0,0,4"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="#888888"/>
        </Style>
        
        <Style Selector="Button.TabButton:focus">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
        </Style>

        <Style Selector="Button.TabButton.selected">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto,*" Background="#DD000000">
        
        <!-- Tab Bar -->
        <Border Grid.Row="0" Background="#222222" BorderBrush="#333333" BorderThickness="0,0,0,2">
            <ItemsControl Name="TabBar" ItemsSource="{Binding Tabs}" Margin="20,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="0"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="vm:TabItem">
                        <Button Classes="TabButton"
                                Name="TabItemButton"
                                Content="{Binding Title}"
                                Command="{Binding $parent[UserControl].((vm:TabNavigationViewModel)DataContext).SelectTabCommand}"
                                CommandParameter="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <!-- Tab Content -->
        <ContentControl Grid.Row="1" 
                        Content="{Binding SelectedTab.Content}" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch">
            <ContentControl.DataTemplates>
                <DataTemplate DataType="{x:Type vm:HistoryViewModel}">
                    <controls:HistoryControl/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:OmniSearchViewModel}">
                    <controls:OmniSearchControl/>
                </DataTemplate>
            </ContentControl.DataTemplates>
        </ContentControl>

    </Grid>
</UserControl>
