<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Baird.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Baird.Controls.CecDebugControl"
             x:CompileBindings="True"
             x:DataType="vm:CecDebugViewModel">

    <UserControl.KeyBindings>
        <KeyBinding Gesture="Escape" Command="{Binding BackCommand}" />
    </UserControl.KeyBindings>

    <UserControl.Styles>
        <Style Selector="Button.CecButton">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="MinWidth" Value="140"/>
        </Style>
        
        <Style Selector="Button.CecButton:focus">
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="Background" Value="#3D3D40"/>
        </Style>

        <Style Selector="Button.CecButton:disabled">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderBrush" Value="#2D2D30"/>
        </Style>

        <Style Selector="Button.PowerButton">
            <Setter Property="Background" Value="#1976D2"/>
        </Style>
        
        <Style Selector="Button.PowerButton:focus">
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="Background" Value="#2196F3"/>
        </Style>

        <Style Selector="Button.VolumeButton">
            <Setter Property="Background" Value="#7B1FA2"/>
        </Style>
        
        <Style Selector="Button.VolumeButton:focus">
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="Background" Value="#9C27B0"/>
        </Style>

        <Style Selector="Button.InputButton">
            <Setter Property="Background" Value="#388E3C"/>
        </Style>
        
        <Style Selector="Button.InputButton:focus">
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="Background" Value="#4CAF50"/>
        </Style>
    </UserControl.Styles>

    <Border Background="#1E1E1E" Padding="15">
        <Grid ColumnDefinitions="450,*" RowDefinitions="Auto,*">
            
            <!-- Header spanning both columns -->
            <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="15" VerticalAlignment="Center">
                    <TextBlock Text="CEC Debug" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <Border Background="#2D2D30" CornerRadius="3" Padding="8,4">
                        <TextBlock Text="{Binding StatusText}" Foreground="#CCCCCC" FontSize="12"/>
                    </Border>
                </StackPanel>
                <Button Grid.Column="1" 
                        Content="Refresh Status" 
                        Classes="CecButton"
                        Command="{Binding RefreshStatusCommand}"
                        IsEnabled="{Binding !IsExecuting}"
                        Margin="0"/>
            </Grid>

            <!-- Left Column: Controls -->
            <ScrollViewer Grid.Column="0" Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,10,0">
                <StackPanel Orientation="Vertical" Spacing="10">
                    
                    <!-- Power Controls -->
                    <Border Background="#2D2D30" 
                           BorderBrush="#3F3F46" 
                           BorderThickness="1" 
                           CornerRadius="4" 
                           Padding="12">
                        <StackPanel Orientation="Vertical" Spacing="8">
                            <TextBlock Text="Power" FontWeight="Bold" Foreground="White" FontSize="14"/>
                            <WrapPanel Orientation="Horizontal">
                                <Button Content="Power On" 
                                       Classes="CecButton PowerButton"
                                       Command="{Binding PowerOnCommand}"
                                       IsEnabled="{Binding !IsExecuting}"/>
                                <Button Content="Power Off" 
                                       Classes="CecButton PowerButton"
                                       Command="{Binding PowerOffCommand}"
                                       IsEnabled="{Binding !IsExecuting}"/>
                                <Button Content="Toggle" 
                                       Classes="CecButton PowerButton"
                                       Command="{Binding TogglePowerCommand}"
                                       IsEnabled="{Binding !IsExecuting}"/>
                            </WrapPanel>
                        </StackPanel>
                    </Border>

                    <!-- Volume Controls -->
                    <Border Background="#2D2D30" 
                           BorderBrush="#3F3F46" 
                           BorderThickness="1" 
                           CornerRadius="4" 
                           Padding="12">
                        <StackPanel Orientation="Vertical" Spacing="8">
                            <TextBlock Text="Volume" FontWeight="Bold" Foreground="White" FontSize="14"/>
                            <WrapPanel Orientation="Horizontal">
                                <Button Content="Vol Up" 
                                       Classes="CecButton VolumeButton"
                                       Command="{Binding VolumeUpCommand}"
                                       IsEnabled="{Binding !IsExecuting}"/>
                                <Button Content="Vol Down" 
                                       Classes="CecButton VolumeButton"
                                       Command="{Binding VolumeDownCommand}"
                                       IsEnabled="{Binding !IsExecuting}"/>
                            </WrapPanel>
                        </StackPanel>
                    </Border>

                    <!-- Input Controls -->
                    <Border Background="#2D2D30" 
                           BorderBrush="#3F3F46" 
                           BorderThickness="1" 
                           CornerRadius="4" 
                           Padding="12">
                        <StackPanel Orientation="Vertical" Spacing="8">
                            <TextBlock Text="Input" FontWeight="Bold" Foreground="White" FontSize="14"/>
                            <WrapPanel Orientation="Horizontal">
                                <Button Content="Switch to This" 
                                       Classes="CecButton InputButton"
                                       Command="{Binding ChangeInputCommand}"
                                       IsEnabled="{Binding !IsExecuting}"/>
                                <Button Content="Cycle Inputs" 
                                       Classes="CecButton InputButton"
                                       Command="{Binding CycleInputsCommand}"
                                       IsEnabled="{Binding !IsExecuting}"/>
                            </WrapPanel>
                        </StackPanel>
                    </Border>

                    <!-- Compact Help -->
                    <Border Background="#2D2D30" 
                           BorderBrush="#3F3F46" 
                           BorderThickness="1" 
                           CornerRadius="4" 
                           Padding="10">
                        <TextBlock Foreground="#888888" FontSize="10" TextWrapping="Wrap">
                            <Run Text="Requires cec-ctl (v4l-utils). Press ESC to exit."/>
                        </TextBlock>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Right Column: Command Log -->
            <Border Grid.Column="1" Grid.Row="1" 
                    Background="#2D2D30" 
                    BorderBrush="#3F3F46" 
                    BorderThickness="1" 
                    CornerRadius="4" 
                    Padding="12">
                <Grid RowDefinitions="Auto,*">
                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                        <TextBlock Grid.Column="0" Text="Command Log" FontWeight="Bold" Foreground="White" FontSize="14"/>
                        <Button Grid.Column="1" 
                               Content="Clear" 
                               Command="{Binding ClearLogCommand}"
                               Background="#1E1E1E"
                               Foreground="White"
                               Padding="8,4"
                               FontSize="11"
                               CornerRadius="3"
                               BorderThickness="0"/>
                    </Grid>
                    
                    <ScrollViewer Grid.Row="1" 
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled">
                        <StackPanel>
                            <ItemsControl ItemsSource="{Binding LogEntries}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#1E1E1E" 
                                               BorderBrush="#3F3F46" 
                                               BorderThickness="1" 
                                               CornerRadius="3" 
                                               Padding="8"
                                               Margin="0,0,0,6">
                                            <StackPanel Spacing="4">
                                                <Grid ColumnDefinitions="Auto,Auto,*">
                                                    <TextBlock Grid.Column="0" 
                                                              Text="{Binding StatusText}" 
                                                              Foreground="{Binding StatusColor}"
                                                              FontWeight="Bold"
                                                              FontSize="12"
                                                              Margin="0,0,8,0"/>
                                                    <TextBlock Grid.Column="1" 
                                                              Text="{Binding TimeText}" 
                                                              Foreground="#888888"
                                                              FontSize="10"
                                                              Margin="0,0,8,0"/>
                                                    <TextBlock Grid.Column="2" 
                                                              Text="{Binding Command}" 
                                                              Foreground="#CCCCCC"
                                                              FontSize="10"
                                                              FontFamily="Courier New"
                                                              TextWrapping="Wrap"/>
                                                </Grid>
                                                <TextBlock Text="{Binding Response}" 
                                                          Foreground="#999999"
                                                          FontSize="9"
                                                          FontFamily="Courier New"
                                                          TextWrapping="Wrap"
                                                          MaxLines="8"
                                                          IsVisible="{Binding Response, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <TextBlock Text="No commands logged yet" 
                                      Foreground="#666666" 
                                      FontSize="11"
                                      HorizontalAlignment="Center"
                                      Margin="0,20"
                                      IsVisible="{Binding !LogEntries.Count}"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

        </Grid>
    </Border>

</UserControl>