<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Baird.ViewModels"
             xmlns:controls="using:Baird.Controls"
             xmlns:conv="using:Baird.Converters"
             xmlns:services="using:Baird.Services"
             xmlns:asyncImage="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Baird.Controls.OmniSearchControl"
             x:CompileBindings="True"
             x:DataType="vm:OmniSearchViewModel">
             
    <UserControl.Resources>
        <conv:StringVisibilityConverter x:Key="StringVisibilityConverter"/>
    </UserControl.Resources>

    <UserControl.KeyBindings>
        <KeyBinding Gesture="Escape" Command="{Binding BackCommand}" />
        <KeyBinding Gesture="Back" Command="{Binding BackIfEmptyCommand}" />
        <KeyBinding Gesture="Enter" Command="{Binding PlayCommand}" CommandParameter="{Binding SelectedItem}" />
    </UserControl.KeyBindings>

    <UserControl.Styles>
        <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Setter Property="BorderThickness" Value="4"/>
        </Style>
        
        <!-- Tile Style for ListBoxItem -->
        <Style Selector="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="4"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        </Style>
        
        <!-- Selected or Focused -> Highlight Border -->
        <Style Selector="ListBoxItem:selected">
            <Setter Property="BorderBrush" Value="#eeeeee"/>
        </Style>
        <Style Selector="ListBoxItem:focus">
            <Setter Property="BorderBrush" Value="#eeeeee"/>
        </Style>
        
        <!-- Remove default blue background for selection -->
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </UserControl.Styles>

    <Grid Name="OmniSearchGrid" RowDefinitions="Auto,*,Auto" Background="#DD000000"
          XYFocus.NavigationModes="Enabled"
          XYFocus.DownNavigationStrategy="Projection"
          XYFocus.UpNavigationStrategy="Projection"
          XYFocus.LeftNavigationStrategy="Projection"
          XYFocus.RightNavigationStrategy="Projection">
        
        <!-- Row 0: SearchBox -->
        <Border Grid.Row="0" Padding="20">
            <Grid>
                <TextBox Name="SearchBox" 
                         Text="{Binding SearchText}" 
                         FontSize="24" 
                         Watermark="Search...">
                    <TextBox.KeyBindings>
                        <KeyBinding Gesture="Enter" Command="{Binding PlayCommand}" CommandParameter="{Binding SelectedItem}" />
                    </TextBox.KeyBindings>
                </TextBox>
                
                <!-- Progress bar along bottom border -->
                <ProgressBar Height="4" 
                             VerticalAlignment="Bottom" 
                             HorizontalAlignment="Stretch"
                             IsVisible="{Binding IsAutoActivationPending}"
                             Minimum="0"
                             Maximum="1"
                             Value="{Binding AutoActivationProgress}"
                             Margin="0,0,0,-4"
                             Foreground="#4CAF50"
                             Background="Transparent" />
            </Grid>
        </Border>

        <!-- Row 1: Search Results -->
        <ListBox Grid.Row="1" 
                 Name="ResultsList" 
                 ItemsSource="{Binding SearchResults}"
                 SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                 Background="Transparent"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel ItemWidth="300" 
                               ItemHeight="240" 
                               HorizontalAlignment="Center"
                               Width="{Binding $parent[controls:OmniSearchControl].CalculatedWidth}"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button Background="Transparent" 
                            Padding="0"
                            BorderThickness="0"
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch" 
                            VerticalContentAlignment="Stretch"
                            Command="{Binding $parent[UserControl].DataContext.PlayCommand}"
                            CommandParameter="{Binding}">
                        <controls:MediaTileControl DataContext="{Binding}" />
                    </Button>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" IsVisible="{Binding IsSearching}">
            <TextBlock Text="Searching..." FontSize="20" Foreground="#AAAAAA" HorizontalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" Width="200" Margin="0,10,0,0" Height="4"/>
        </StackPanel>

        <!-- Row 2: Virtual Keyboard (Visible only when prompted) -->

    </Grid>
</UserControl>
