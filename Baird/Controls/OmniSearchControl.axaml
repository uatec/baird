<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Baird.ViewModels"
             xmlns:controls="using:Baird.Controls"
             xmlns:conv="using:Baird.Converters"
             xmlns:services="using:Baird.Services"
             xmlns:asyncImage="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Baird.Controls.OmniSearchControl"
             x:CompileBindings="True"
             x:DataType="vm:OmniSearchViewModel">
             
    <UserControl.Resources>
        <conv:StringVisibilityConverter x:Key="StringVisibilityConverter"/>
    </UserControl.Resources>

    <UserControl.KeyBindings>
        <KeyBinding Gesture="Escape" Command="{Binding BackCommand}" />
        <KeyBinding Gesture="Back" Command="{Binding BackIfEmptyCommand}" />
    </UserControl.KeyBindings>

    <UserControl.Styles>
        <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Setter Property="BorderThickness" Value="4"/>
        </Style>
        
        <!-- Tile Style for Buttons -->
        <!-- Styles removed -->
    </UserControl.Styles>

    <Grid Name="OmniSearchGrid" RowDefinitions="Auto,*,Auto" Background="Transparent"
          XYFocus.NavigationModes="Enabled"
          XYFocus.DownNavigationStrategy="Projection"
          XYFocus.UpNavigationStrategy="Projection"
          XYFocus.LeftNavigationStrategy="Projection"
          XYFocus.RightNavigationStrategy="Projection">
        
        <!-- Row 0: SearchBox -->
        <Border Grid.Row="0" Padding="20">
            <StackPanel Spacing="10">
                <Grid ColumnDefinitions="*,Auto">
                    <Grid Grid.Column="0">
                        <TextBox Name="SearchBox" 
                                 Text="{Binding SearchText}" 
                                 FontSize="24" 
                                 Watermark="Search...">
                            <TextBox.KeyBindings>
                                <KeyBinding Gesture="Enter" Command="{Binding PlayFirstResultCommand}" />
                                <KeyBinding Gesture="Down" Command="{Binding $parent[controls:OmniSearchControl].MoveFocusDownCommand}" />
                            </TextBox.KeyBindings>
                        </TextBox>
                        
                        <!-- Progress bar along bottom border -->
                        <ProgressBar Height="4" 
                                     VerticalAlignment="Bottom" 
                                     HorizontalAlignment="Stretch"
                                     IsVisible="{Binding IsAutoActivationPending}"
                                     Minimum="0"
                                     Maximum="1"
                                     Value="{Binding AutoActivationProgress}"
                                     Margin="0,0,0,-4"
                                     Foreground="#4CAF50"
                                     Background="Transparent" />
                    </Grid>

                    <!-- Provider Status Pips -->
                    <ItemsControl Grid.Column="1" ItemsSource="{Binding ProviderStatuses}" Margin="15,0,0,0" VerticalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="15"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                    <Ellipse Width="10" Height="10" Fill="{Binding StatusBrush}" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Name}" Foreground="#AAAAAA" FontSize="14" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>

                <!-- Suggested Terms Pills -->
                <ItemsControl Name="SuggestionsList" 
                              ItemsSource="{Binding SuggestedTerms}"
                              XYFocus.Down="{Binding #ResultsList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding}" 
                                    Command="{Binding $parent[UserControl].DataContext.SearchTermCommand}"
                                    CommandParameter="{Binding}"
                                    CornerRadius="16"
                                    BorderThickness="1"
                                    BorderBrush="#555555"
                                    Background="#222222"
                                    Foreground="White"
                                    Padding="15,5"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- Row 1: Search Results -->
        <ScrollViewer Grid.Row="1"
                      Focusable="False"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl Name="ResultsList" 
                          ItemsSource="{Binding SearchResults}"
                          Background="Transparent"
                          XYFocus.NavigationModes="Enabled">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="6" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <controls:MediaTileControl DataContext="{Binding}"
                                                   Command="{Binding $parent[UserControl].DataContext.PlayCommand}"
                                                   CommandParameter="{Binding}"
                                                   LongPressCommand="{Binding $parent[UserControl].DataContext.AddToWatchlistCommand}"
                                                   LongPressCommandParameter="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" IsVisible="{Binding ShowSpinner}">
            <TextBlock Text="Searching..." FontSize="20" Foreground="#AAAAAA" HorizontalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" Width="200" Margin="0,10,0,0" Height="4"/>
        </StackPanel>

        <!-- Row 2: Virtual Keyboard (Visible only when prompted) -->

    </Grid>
</UserControl>
