<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Baird.ViewModels"
             xmlns:controls="using:Baird.Controls"
             xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Baird.Controls.OmniSearchControl"
             x:DataType="vm:OmniSearchViewModel">
    
    <UserControl.Styles>
        <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Setter Property="BorderThickness" Value="4"/>
        </Style>
    </UserControl.Styles>

    <Grid Name="OmniSearchGrid" RowDefinitions="Auto,*,Auto" Background="#DD000000"
          XYFocus.NavigationModes="Enabled"
          XYFocus.DownNavigationStrategy="Projection"
          XYFocus.UpNavigationStrategy="Projection"
          XYFocus.LeftNavigationStrategy="Projection"
          XYFocus.RightNavigationStrategy="Projection">
        
        <!-- Row 0: SearchBox -->
        <Border Grid.Row="0" Padding="20">
            <TextBox Name="SearchBox" 
                     Text="{Binding SearchText}" 
                     FontSize="24" 
                     Watermark="Search..." />
        </Border>

        <!-- Row 1: Search Results -->
        <ScrollViewer Grid.Row="1" 
                      Name="ResultsScrollViewer"
                      HorizontalScrollBarVisibility="Disabled" 
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl Name="ResultsList" ItemsSource="{Binding SearchResults}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel ItemWidth="300" ItemHeight="240" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Background="Transparent" 
                                BorderThickness="4" 
                                BorderBrush="Transparent"
                                CornerRadius="8"
                                Padding="10"
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                                Click="OnResultClicked">
                            <Button.Styles>
                                <Style Selector="Button:focus">
                                    <Setter Property="BorderBrush" Value="#eeeeee"/>
                                </Style>
                            </Button.Styles>
                            <Grid RowDefinitions="*, Auto, Auto">
                                <Border CornerRadius="8" ClipToBounds="True" Height="169">
                                    <Image asyncImageLoader:ImageLoader.Source="{Binding ImageUrl}" Stretch="UniformToFill"/>
                                </Border>
                                <TextBlock Grid.Row="1" Text="{Binding Name}" Foreground="White" FontWeight="Bold" Margin="0,5,0,0" TextTrimming="CharacterEllipsis" TextAlignment="Left"/>
                                <TextBlock Grid.Row="2" Text="{Binding Details}" Foreground="#AAAAAA"  FontSize="12" TextTrimming="CharacterEllipsis" TextAlignment="Left"/>
                            </Grid>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" IsVisible="{Binding IsSearching}">
            <TextBlock Text="Searching..." FontSize="20" Foreground="#AAAAAA" HorizontalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" Width="200" Margin="0,10,0,0" Height="4"/>
        </StackPanel>

        <!-- Row 2: Virtual Keyboard (Visible only when prompted) -->
        <controls:VirtualKeyboardControl Name="VirtualKeyboard" 
                                         Grid.Row="2" 
                                         IsVisible="{Binding IsKeyboardVisible}" 
                                         Height="320" 
                                         Margin="0,10,0,0" />
    </Grid>
</UserControl>
