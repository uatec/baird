<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Baird.ViewModels"
             xmlns:controls="using:Baird.Controls"
             xmlns:conv="using:Baird.Converters"
             xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Baird.Controls.OmniSearchControl"
             x:DataType="vm:OmniSearchViewModel">
    
    <UserControl.Resources>
        <conv:StringVisibilityConverter x:Key="StringVisibilityConverter"/>
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Setter Property="BorderThickness" Value="4"/>
        </Style>
        
        <!-- Tile Style for ListBoxItem -->
        <Style Selector="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="4"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        </Style>
        
        <!-- Selected or Focused -> Highlight Border -->
        <Style Selector="ListBoxItem:selected">
            <Setter Property="BorderBrush" Value="#eeeeee"/>
        </Style>
        <Style Selector="ListBoxItem:focus">
            <Setter Property="BorderBrush" Value="#eeeeee"/>
        </Style>
        
        <!-- Remove default blue background for selection -->
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </UserControl.Styles>

    <Grid Name="OmniSearchGrid" RowDefinitions="Auto,*,Auto" Background="#DD000000"
          XYFocus.NavigationModes="Enabled"
          XYFocus.DownNavigationStrategy="Projection"
          XYFocus.UpNavigationStrategy="Projection"
          XYFocus.LeftNavigationStrategy="Projection"
          XYFocus.RightNavigationStrategy="Projection">
        
        <!-- Row 0: SearchBox -->
        <Border Grid.Row="0" Padding="20">
            <TextBox Name="SearchBox" 
                     Text="{Binding SearchText}" 
                     FontSize="24" 
                     Watermark="Search..." />
        </Border>

        <!-- Row 1: Search Results -->
        <ListBox Grid.Row="1" 
                 Name="ResultsList" 
                 ItemsSource="{Binding SearchResults}"
                 SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                 Background="Transparent"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 Tapped="OnResultTapped">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel ItemWidth="300" ItemHeight="240" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid RowDefinitions="*, Auto, Auto">
                        <Border CornerRadius="8" ClipToBounds="True" Height="169">
                            <Image asyncImageLoader:ImageLoader.Source="{Binding ImageUrl}" Stretch="UniformToFill" Background="Red"/>
                        </Border>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                             <TextBlock Text="{Binding ChannelNumber}" Foreground="#FFD700" FontWeight="ExtraBold" Margin="0,0,6,0" IsVisible="{Binding ChannelNumber, Converter={StaticResource StringVisibilityConverter}}"/>
                             <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="Bold" TextTrimming="CharacterEllipsis" TextAlignment="Left"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="6" Margin="0,2,0,0">
                            <Border Background="#333333" CornerRadius="4" Padding="4,0" VerticalAlignment="Center" IsVisible="{Binding Source, Converter={StaticResource StringVisibilityConverter}}">
                                <TextBlock Text="{Binding Source}" Foreground="#4CC9F0" FontSize="10" FontWeight="Bold"/>
                            </Border>
                            <TextBlock Text="{Binding Details}" Foreground="#AAAAAA"  FontSize="12" TextTrimming="CharacterEllipsis" TextAlignment="Left" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" IsVisible="{Binding IsSearching}">
            <TextBlock Text="Searching..." FontSize="20" Foreground="#AAAAAA" HorizontalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" Width="200" Margin="0,10,0,0" Height="4"/>
        </StackPanel>

        <!-- Row 2: Virtual Keyboard (Visible only when prompted) -->
        <controls:VirtualKeyboardControl Name="VirtualKeyboard" 
                                         Grid.Row="2" 
                                         IsVisible="{Binding IsKeyboardVisible}" 
                                         Height="320" 
                                         Margin="0,10,0,0" />
    </Grid>
</UserControl>
