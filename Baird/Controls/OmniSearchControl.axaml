<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Baird.ViewModels"
             xmlns:controls="using:Baird.Controls"
             xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Baird.Controls.OmniSearchControl"
             x:DataType="vm:OmniSearchViewModel">
    
    <UserControl.Styles>
        <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Setter Property="BorderThickness" Value="4"/>
        </Style>
        <Style Selector="ListBoxItem:focus">
            <Setter Property="Background" Value="#444444"/>
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Setter Property="BorderThickness" Value="4"/>
        </Style>
        <Style Selector="ListBoxItem:selected">
            <Setter Property="Background" Value="#666666"/>
        </Style>
    </UserControl.Styles>

    <Grid Name="OmniSearchGrid" RowDefinitions="Auto,*,Auto" Background="#DD000000">
        
        <!-- Row 0: SearchBox -->
        <Border Grid.Row="0" Padding="20">
            <TextBox Name="SearchBox" 
                     Text="{Binding SearchText}" 
                     FontSize="24" 
                     Watermark="Search..."
                     XYFocus.Down="{Binding #ResultsList}"/>
        </Border>

        <!-- Row 1: Search Results -->
        <Grid Grid.Row="1">
            <ListBox Name="ResultsList" 
                     ItemsSource="{Binding SearchResults}" 
                     SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                     Background="Transparent"
                     XYFocus.Up="{Binding #SearchBox}"
                     XYFocus.Down="{Binding #VirtualKeyboard}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                         <Grid ColumnDefinitions="Auto,*" Margin="5">
                             <Border CornerRadius="4" ClipToBounds="True" Width="80" Height="45" Background="#333" Margin="0,0,10,0">
                                 <Image asyncImageLoader:ImageLoader.Source="{Binding ImageUrl}" Stretch="UniformToFill"/>
                             </Border>
                             <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                 <StackPanel Orientation="Horizontal">
                                     <TextBlock Text="{Binding ChannelNumber}" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,10,0" IsVisible="{Binding ChannelNumber, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                     <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold" Foreground="White"/>
                                 </StackPanel>
                                 <TextBlock Text="{Binding Source}" FontSize="12" Foreground="#888888" Margin="0,1,10,0" VerticalAlignment="Center"/>
                                 <TextBlock Text="{Binding Details}" FontSize="14" Foreground="LightGray" VerticalAlignment="Center" IsVisible="{Binding Details, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                             </StackPanel>
                         </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Loading Indicator -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" IsVisible="{Binding IsSearching}">
                <TextBlock Text="Searching..." FontSize="20" Foreground="#AAAAAA" HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" Width="200" Margin="0,10,0,0" Height="4"/>
            </StackPanel>
        </Grid>

        <!-- Row 2: Virtual Keyboard (Visible only when prompted) -->
        <controls:VirtualKeyboardControl Name="VirtualKeyboard" 
                                         Grid.Row="2" 
                                         IsVisible="{Binding IsKeyboardVisible}" 
                                         Height="320" 
                                         Margin="0,10,0,0"
                                         XYFocus.Up="{Binding #ResultsList}"/>
    </Grid>
</UserControl>
