<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Baird.ViewModels"
             xmlns:controls="using:Baird.Controls"
             xmlns:conv="using:Baird.Converters"
             xmlns:services="using:Baird.Services"
             xmlns:asyncImage="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Baird.Controls.OmniSearchControl"
             x:CompileBindings="True"
             x:DataType="vm:OmniSearchViewModel">
             
    <UserControl.Resources>
        <conv:StringVisibilityConverter x:Key="StringVisibilityConverter"/>
    </UserControl.Resources>

    <UserControl.KeyBindings>
        <KeyBinding Gesture="Escape" Command="{Binding BackCommand}" />
        <KeyBinding Gesture="Back" Command="{Binding BackIfEmptyCommand}" />
    </UserControl.KeyBindings>

    <UserControl.Styles>
        <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Setter Property="BorderThickness" Value="4"/>
        </Style>
        
        <!-- Tile Style for Buttons -->
        <Style Selector="Button.MediaTileButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="4"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        </Style>
        
        <Style Selector="Button.MediaTileButton:focus">
            <Setter Property="BorderBrush" Value="#eeeeee"/>
        </Style>
    </UserControl.Styles>

    <Grid Name="OmniSearchGrid" RowDefinitions="Auto,*,Auto" Background="#DD000000"
          XYFocus.NavigationModes="Enabled"
          XYFocus.DownNavigationStrategy="Projection"
          XYFocus.UpNavigationStrategy="Projection"
          XYFocus.LeftNavigationStrategy="Projection"
          XYFocus.RightNavigationStrategy="Projection">
        
        <!-- Row 0: SearchBox -->
        <Border Grid.Row="0" Padding="20">
            <StackPanel Spacing="10">
                <Grid>
                    <TextBox Name="SearchBox" 
                             Text="{Binding SearchText}" 
                             FontSize="24" 
                             Watermark="Search...">
                        <TextBox.KeyBindings>
                            <KeyBinding Gesture="Enter" Command="{Binding PlayFirstResultCommand}" />
                        </TextBox.KeyBindings>
                    </TextBox>
                    
                    <!-- Progress bar along bottom border -->
                    <ProgressBar Height="4" 
                                 VerticalAlignment="Bottom" 
                                 HorizontalAlignment="Stretch"
                                 IsVisible="{Binding IsAutoActivationPending}"
                                 Minimum="0"
                                 Maximum="1"
                                 Value="{Binding AutoActivationProgress}"
                                 Margin="0,0,0,-4"
                                 Foreground="#4CAF50"
                                 Background="Transparent" />
                </Grid>

                <!-- Suggested Terms Pills -->
                <ItemsControl ItemsSource="{Binding SuggestedTerms}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding}" 
                                    Command="{Binding $parent[UserControl].DataContext.SearchTermCommand}"
                                    CommandParameter="{Binding}"
                                    CornerRadius="16"
                                    BorderThickness="1"
                                    BorderBrush="#555555"
                                    Background="#222222"
                                    Foreground="White"
                                    Padding="15,5"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- Row 1: Search Results -->
        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl Name="ResultsList" 
                          ItemsSource="{Binding SearchResults}"
                          Background="Transparent"
                          XYFocus.NavigationModes="Enabled">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="6" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Classes="MediaTileButton"
                                Command="{Binding $parent[UserControl].DataContext.PlayCommand}"
                                CommandParameter="{Binding}">
                            <Grid>
                                <controls:MediaTileControl DataContext="{Binding}" />
                                <!-- Finished indicator -->
                                <Border Background="#4CAF50" 
                                        CornerRadius="0,0,0,12"
                                        Width="40" Height="40"
                                        HorizontalAlignment="Right" 
                                        VerticalAlignment="Top"
                                        IsVisible="{Binding IsFinished}">
                                    <Path Data="M9,20.42L2.79,14.21L5.62,11.38L9,14.77L18.88,4.88L21.71,7.71L9,20.42Z" 
                                          Fill="White" 
                                          Stretch="Uniform"
                                          Width="24" Height="24"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" IsVisible="{Binding IsSearching}">
            <TextBlock Text="Searching..." FontSize="20" Foreground="#AAAAAA" HorizontalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" Width="200" Margin="0,10,0,0" Height="4"/>
        </StackPanel>

        <!-- Row 2: Virtual Keyboard (Visible only when prompted) -->

    </Grid>
</UserControl>
