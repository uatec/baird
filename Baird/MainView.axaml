<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Baird.MainView">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
        <TextBlock Text="Hello World" FontSize="30" HorizontalAlignment="Center"/>
        
        <TextBlock Name="ClockBlock" FontSize="20" HorizontalAlignment="Center"/>
        
        <Button Content="Exit" HorizontalAlignment="Center" Click="OnExitClick"/>
    </StackPanel>
</UserControl>
